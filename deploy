die() {
  echo "$*"
  exit 1
}

cd example
flutter pub get && flutter build web
if [ ! $? = 0 ]; then
  die "build failed"
fi
if [ -d "build/web/" ]; then
  cp -rf build/web/* ../docs/
  echo "done"
fi